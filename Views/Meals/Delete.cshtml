@model Diplom.Models.Meal


<h3>Вы уверены что хотите удалить запись?</h3>
<div>
    <h4>Блюдо</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="IdMenu" value="@ViewBag.IdMenu" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Create" asp-route-IdMenu="@ViewBag.IdMenu" class="btn">
            <i class="bi bi-arrow-return-left"></i>
            Вернуться
        </a>
    </form>
</div>

