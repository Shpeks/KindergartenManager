@model Diplom.Models.MenuFood



<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Удаление</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Количество за единицу
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountPerUnit)
        </dd>
        <dt class="col-sm-2">
            Выдать
        </dt>
        <dd class="col-sm-10">
            @Math.Round(Model.Supply, 2)
        </dd>
        <dt class="col-sm-2">
            Код
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Блюдо
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.Name)
        </dd>
        <dt class="col-sm-2">
            Время приема пищи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MealTime.Name)
        </dd>
        <dt class="col-sm-2">
            Единица измерения
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit.Name)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-IdMenu="@ViewBag.IdMenu">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" asp-route-IdMenu="@ViewBag.IdMenu" class="btn">
            <i class="bi bi-arrow-return-left"></i>
            Вернуться
        </a>
    </form>
</div>

